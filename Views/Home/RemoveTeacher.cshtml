    <h1 class="display-4">Ekran usuwania nauczyciela</h1>
    
</div>

@using(Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "nie dziala", new{@class = "text-danger"})

    <div>
